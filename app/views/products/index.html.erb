<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12">
      <div id="new-product-btn">
        <%= link_to 'Add a New Product',
          new_business_product_path(session[:business_id]),
          class: "btn btn-sm btn-primary" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h1 class="page-header text-center">Product List</h1>
      <div class="panel panel-primary general-panel product-panel">
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <th></th>
                  <th class="text-center">Name</th>
                  <th class="text-center">Unit Price</th>
                  <th class="text-center">Description</th>
                  <th class="text-center">Edit/Delete</th>
                </tr>                
              </thead>
              <tbody>
                <% @products.each do |product| %>
                  <tr class="text-center">
                    <td><%= @products.index(product) + 1 %></td>
                    <td><%= product.name %></td>
                    <td><%= product.unit_price %></td>
                    <td><%= attribute_present_or_not?(product.description) %></td>
                    <td>
                    <%= link_to 'Edit', edit_business_product_path(session[:business_id], product) %>
                        <%= link_to 'Delete', business_product_path(session[:business_id], product), method: :delete,
                        data: { confirm: "Are you sure you want to delete this product: '#{product.name}' ?" }, class: "text-danger"%>
                    </td>
                  </tr>
                <% end %>                
              </tbody>              
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>  
</div>
